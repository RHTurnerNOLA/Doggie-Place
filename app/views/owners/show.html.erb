<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @owner.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @owner.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @owner.phone %>
</p>

<p>
  <strong>Emerg name:</strong>
  <%= @owner.emerg_name %>
</p>

<p>
  <strong>Emerg phone:</strong>
  <%= @owner.emerg_phone %>
</p>

<div class="row">
  <% @owner.dogs.each do |dog| %>
    <div class="col-sm-3" >
      <div class="panel body">
      <%= image_tag dog.avatar.url(:medium), class: "img-responsive" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_owner_path(@owner) %>
